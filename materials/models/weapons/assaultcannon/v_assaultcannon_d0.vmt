UnlitGeneric{	//This is the first (1s) digit on the AC HUD
$baseTexture models/weapons/assaultcannon/v_assaultcannon_digits
$model 1
$translucent 1

//Local Variables
$totalAmmo 0
$lowAmmo 65
$veryLowAmmo 25
$defaultTint "[0.83 1 1]"
$lowTint "[1 0.78 0.43]"
$veryLowTint "[1 0 0]"
$baseTint "[0 0 0]"

Proxies{
//Get single-digit ammo amount and go directly to the appropriate frame
CurrentAmmo{
digitindex 0
resultVar $frame
}
//Get total ammo amount
CurrentAmmo{
digitindex -1
resultVar $totalAmmo
}
//Tint if total ammo is <= $lowAmmo
LessOrEqual{
srcVar1 $totalAmmo
srcVar2 $lowAmmo
lessEqualVar "$lowTint"
greaterVar "$defaultTint"
resultVar "$baseTint"
}
//Tint if total ammo is <= $veryLowAmmo
LessOrEqual{
srcVar1 $totalAmmo
srcVar2 $veryLowAmmo
lessEqualVar "$veryLowTint"
greaterVar "$baseTint"
resultVar "$color"
}
}
}